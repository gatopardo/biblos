{{define "title"}}Actualizar Editora{{end}}
{{define "head"}}
{{end}}
{{define "content"}}

 <div class="container">
        <h3 class="mcenter">{{template "title" .}}</h3>
	<form method="post">
           <div class="fwrapper fcols2">
               <div class="fbox">
                   <label for="name">Name</label>
               </div>
               <div class="fbox">
                    <input type="text" class="form-control" id="name" name="name" size="32" maxlength="48" value="{{.name}}" autofocus />
               </div>
           </div>

           <div class="fwrapper fcols2">
               <div class="fbox">
                 <input type="hidden" name="token" value="{{.token}}">
               </div>
               <div class="fbox">
                   <span>
                       <input type="submit" name="action" value="Actualizar" />
                       <input type="submit" name="action" value="Cancelar" />
                   </span>
               </div>
           </div>

	</form>
	
	{{template "footer" .}}
  </div>

{{end}}
{{define "foot"}}{{end}}
